
<div id="inSlider" class="carousel carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#inSlider" data-slide-to="0" class="active"></li>
        <li data-target="#inSlider" data-slide-to="1"></li>
        <li data-target="#inSlider" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="container">
                <div class="carousel-caption">
                    <h3>Consulta Médica</h3>
                    <p class="carousel-subtitle">Atención personalizada y Diagnosticos Precisos</p>
                    <p class="carousel-link-content">
                        <a class="btn btn-lg btn-dark-blue" href="/categoria_servicios/mas_servicios/atencion-primaria-en-salud" role="button">Buscar Servicio</a>

                    </p>
                </div>
                <div class="carousel-image wow zoomIn">
                    <img width="300" height="300" src="<%= image_path('carousel/alice-consulta-medica-estetoscopio.png') %>" alt="laptop"/>
                </div>
            </div>
            <!-- Set background for slide in css -->
            <div class="header-back" style="background: transparent url('<%= image_path('carousel/alice-fondo-consulta-medica.jpg') %>')  50% 0 no-repeat; background-size: cover;"></div>
        </div>
        <div class="item">
            <div class="container">
                <div class="carousel-caption">
                    <h3>Laboratorio</h3>
                    <p class="carousel-subtitle">Tecnología de avanzada para resultados en menos tiempo</p>
                    <p class="carousel-link-content">
                        <a class="btn btn-lg btn-dark-blue" href="/categoria_servicios/mas_servicios/laboratorio" role="button">Buscar Servicio</a>
                    </p>
                </div>
                <div class="carousel-image wow zoomIn">
                    <img width="300" height="300" src="<%= image_path('carousel/alice-cita-laboratorio-estetoscopio.png') %>" alt="laptop"/>
                </div>
            </div>
            <!-- Set background for slide in css -->
            <div class="header-back"style="background: transparent url('<%= image_path('carousel/alice-fondo-laboratorio.jpg') %>')  50% 0 no-repeat; background-size: cover;"></div>
        </div>
        <div class="item">
            <div class="container">
                <div class="carousel-caption">
                    <h3>Imagenología</h3>
                    <p class="carousel-subtitle">Equipamiento de Primera y el mejor servicio</p>
                    <p class="carousel-link-content">
                        <a class="btn btn-lg btn-dark-blue" href="/categoria_servicios/mas_servicios/imagenologia" role="button">Buscar Servicio</a>
                    </p>
                </div>
                <div class="carousel-image wow zoomIn">
                    <img width="300" height="300" src="<%= image_path('carousel/alice-cita-imagenologia-tomografo.png') %>" alt="laptop"/>
                </div>
            </div>
            <!-- Set background for slide in css -->
            <div class="header-back"style="background: transparent url('<%= image_path('carousel/alice-fondo-imagenologia.jpg') %>')  50% 0 no-repeat; background-size: cover;"></div>
        </div>
    </div>
    <a class="left carousel-control" href="#inSlider" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#inSlider" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<section id="noticias-stikers" class="white-section">
    <div class="nt-title-container">
        <div class="container">
            <div class="row">
                <div class="col-title-noticias col-lg-1 col-md-1 col-sm-1 col-xs-1">
                    <h3 class="title-noticias">Noticias:</h3>
                </div>
                <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
                    <ul id="tira-noticias" class="nt-title newsticker">
                        <% @noticias.each do |noticia| %>
                            <li><a href="<%= noticias_ver_path(noticia['slug']) %>"><i class="fa fa-"></i><%= noticia["titulo"] %></a></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="servicios-cliente" class="white-section">
    <div class="container">
        <h2 class="title-section">Qué Ofrece Alice</h2>
        <div class="row">
            <div class="col-servicio col-lg-4 col-md-4 col-sm-6 col-xs-6">
                <div class="content-servicio blue">
                    <div class="text-servicio">
                        <h2 class="text-white text-center"><strong>Consulta tu Cita</strong><i class="fa fa-mouse-pointer"></i></h2>
                        <p class="text-white">Chequea el estatus de tu cita en la comodidad de tu hogar.</p> 
                    </div>

                    <form id="form-consulta" action="/citas/consultar" >
                        <input type="text" name="cita_id" placeholder="Número de Cita" class="form-control">
                        <button class="btn btn-info" type="submit">Consultar</button>
                    </form>
                </div>
            </div>
            <div class="col-servicio col-lg-4 col-md-4 col-sm-6 col-xs-6">
                <div class="content-servicio" style="background: transparent url('<%= image_path('landing/movil-alice.jpg') %>')  50% 0 no-repeat; background-size: cover;">
                    <h3 class="text-blue-dark text-descarga">Necesitas saber más</h3>
                    <div class="content-descarga">
                      <a class="btn btn-info btn-descarga" href="/home/suscripcion">Suscríbete</a>
                    </div>
                </div>
            </div>
            <div class="col-servicio col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="content-servicio embed-responsive">
                    <h3 class="text-blue-dark text-center">Síguenos en <i class="fa fa-twitter"></i></h3>
                    <a class="twitter-timeline" data-lang="es" data-height="240" data-theme="dark" href="https://twitter.com/LaTrinidadAlice"></a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="oferta-eventos" class="white-section">
    <div class="container">
        <div class="row">
            <h2 class="title-section">Eventos Recientes</h2>
            <div class="col-lg-10 col-lg-offset-1">
                <div class="slick-eventos">
                    <% @eventos.each do |evento| %>
                    <div>
                        <div class="ibox-content">
                            <a href="<%= eventos_ver_path(evento['slug']) %>">
                                <div class="content-image-slick">    
                                    <img class="image-slick" src='<%= evento["foto_url"] %>'>   
                                </div>
                            
                                <h3><%= evento["descripcion"] %></h3>
                            </a>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>

<% content_for :javascript do %>
    <script type="text/javascript">

        $(function() {

            $(".select-box").select2({
                placeholder: "Seleccione un Servicio",
                allowClear: true
            });

            $('.newsticker').newsTicker({
                row_height: 46,
                max_rows: 1,
                speed: 600,
                direction: 'up',
                duration: 4000,
                autostart: 1,
                pauseOnHover: 0
            });

            $('.slick-eventos').slick({
                infinite: true,
                slidesToShow: 3,
                slidesToScroll: 1,
                centerMode: true,
                responsive: [
                    {
                        breakpoint: 1024,
                        settings: {
                            slidesToShow: 3,
                            slidesToScroll: 3,
                            infinite: true,
                            dots: true
                        }
                    },
                    {
                        breakpoint: 600,
                        settings: {
                            slidesToShow: 2,
                            slidesToScroll: 2
                        }
                    },
                    {
                        breakpoint: 480,
                        settings: {
                            slidesToShow: 1,
                            slidesToScroll: 1
                        }
                    }
                ]
            });
        });

    </script>
<% end %>